#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{int i,n,x;
 int s=0;
 do
 {cout<<endl<<"Ingrese su valor n: ";
  cin>>n;
  }while(n<0);
 do
 {cout<<endl<<"Ingrese su valor x: ";
  cin>>x;
 }while(x<0);
 for(i=1;i<=n;i++)
 {s= s + powf(1+(1.00/x),i);
 }
 cout<<endl<<"La suma es: "<<s;
 getch();
}
